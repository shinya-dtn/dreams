<div class='registration-wrap'>
  <%= render 'shared/second-header'%>

  <%= form_with model: @user, url: user_registration_path, class:'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        新規登録
      </h1>
    </div>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class='form-text'>ニックネーム</label>
        <span class='indispensable'>必須</span>
      </div>
      <%= f.text_field :nickname, class:'field', placeholder:'例)nickname', maxlength:'20文字'%>
    </div>

    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class='form-text'>メールアドレス</label>
        <span class='indispensable'>必須</span>
      </div>
      <%= f.email_field :email, class:'field', placeholder:'携帯・PCでも可'%>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class='form-text'>パスワード</label>
        <span class='indispensable'>必須</span>
      </div>
      <%= f.password_field :password, class:'field', placeholder:'6文字以上の半角英数字'%>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class='form-text'>パスワード確認</label>
        <span class='indispensable'>必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"field", placeholder:'同じパスワード入力'%>
    </div>

    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class='form-text'>生年月日</label>
        <span class='indispensable'>必須</span>
      </div>
      <div class='select-birthday-wrap'>
        <%= raw sprintf(
              f.date_select(
                :birthday, 
                class:'select-birthday',
                use_month_numbers: true,
                prompt:'--',
                start_year: 1980,
                end_year: (Time.now.year),
                date_separator:'%s'),
              "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>"%>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "登録", class:'actions-btn' %>
    </div>
  </div>
  <% end %>

  <%= render "shared/second-footer" %>
</div>